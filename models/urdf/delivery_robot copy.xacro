<?xml version='1.0'?>

<robot name="delivery_robot"
  xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- #### INERTIA MACROS ####  -->
  <xacro:macro name="cuboid_inertia" params="m x y z">
    <inertia ixx="${m*(y*y+z*z)/12}" ixy = "0" ixz = "0" iyy="${m*(x*x+z*z)/12}" iyz = "0" izz="${m*(x*x+y*y)/12}" />
  </xacro:macro>

  <xacro:macro name="cylinder_inertia" params="m r l">
    <inertia ixx="${m*(3*r*r+l*l)/12}" ixy = "0" ixz = "0" iyy="${m*(3*r*r+l*l)/12}" iyz = "0" izz="${m*r*r/2}" />
  </xacro:macro>

  <xacro:macro name="sphere_inertia" params="m r">
    <inertia ixx="${2*m*r*r/5}" ixy = "0" ixz = "0" iyy="${2*m*r*r/5}" iyz = "0" izz="${2*m*r*r/5}" />
  </xacro:macro>

  <link name="robot_footprint"></link>

  <xacro:include filename="$(find delivery_robot_simulation)/models/urdf/delivery_robot.gazebo" />

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="base_chassis" />
  </joint>

  <link name='base_chassis'>
    <pose>0 0 0.12 0 0 0</pose>

    <inertial>
      <mass value="10"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia ixx="0.09133" ixy = "0" ixz = "0" iyy="0.04967" iyz = "0" izz="0.10833" />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.2 0.3 0.14"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.2 0.3 0.14"/>
      </geometry>
    </visual>


  </link>

  <link name='base_hokuyo'>
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia ixx="0.000016667" ixy = "0" ixz = "0" iyy="0.00004167" iyz = "0" izz="0.00004167" />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.2 0.1 0.1"/>
      </geometry>
    </collision>

    <visual name='sup_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.2 0.1 0.1"/>
      </geometry>
    </visual>
  </link>

  <joint type="fixed" name="base_hokuyo_joint">
    <origin xyz="0 0 0.12" rpy="0 0 0"/>
    <child link="base_hokuyo"/>
    <parent link="base_chassis"/>
  </joint>


  <link name='sup_chassis'>

    <inertial>
      <mass value="3"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia ixx="0.023125" ixy = "0" ixz = "0" iyy="0.023125" iyz = "0" izz="0.045" />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.3 0.3 0.05"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.3 0.3 0.05"/>
      </geometry>
    </visual>

    <collision name='caster_collision'>
      <origin xyz="-0.12 0 -0.025" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.029"/>
      </geometry>
    </collision>

    <visual name='caster_visual'>
      <origin xyz="-0.12 0 -0.025" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
    </visual>

  </link>

  <joint type="fixed" name="sup_chassis_joint">
    <origin xyz="-0.25 0 -0.045" rpy="0 0 0"/>
    <child link="sup_chassis"/>
    <parent link="base_chassis"/>
  </joint>

  <!-- Add a weigth bar on the end of the robot's bucket - (TEST ONLY) -->
  <link name='back_sup_chassis'>

    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia ixx="0.0007708" ixy = "0" ixz = "0" iyy="0.000021667" iyz = "0" izz="0.0007508" />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.01 0.3 0.05"/>
      </geometry>
    </collision>

    <visual name='back_sup_chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.01 0.3 0.05"/>
      </geometry>
    </visual>

  </link>

  <joint type="fixed" name="back_sup_chassis_joint">
    <origin xyz="-0.155 0 0" rpy="0 0 0"/>
    <child link="back_sup_chassis"/>
    <parent link="sup_chassis"/>
  </joint>

  <!-- ### WHEELS ### -->

  <link name='left_wheel'>

    <inertial>
      <mass value="2"/>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
      <inertia ixx="0.007617" ixy = "0" ixz = "0" iyy="0.007617" iyz = "0" izz="0.0144" />
    </inertial>

    <collision name='collision'>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.12" length="0.05" />
      </geometry>
    </collision>

    <visual name='left_wheel_visual'>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.12" length="0.05" />
      </geometry>
    </visual>
  </link>

  <link name='right_wheel'>

    <inertial>
      <mass value="2"/>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
      <inertia ixx="0.007617" ixy = "0" ixz = "0" iyy="0.007617" iyz = "0" izz="0.0144" />
    </inertial>

    <collision name='collision'>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.12" length="0.05" />
      </geometry>
    </collision>

    <visual name='right_wheel_visual'>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder radius="0.12" length="0.05" />
      </geometry>
    </visual>
  </link>

  <joint type="continuous" name="left_wheel_hinge">
    <origin xyz="0 0.185 0.02" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="base_chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="100" velocity="100"/>
    <dynamics damping="0.01" friction="0.1"/>
  </joint>

  <joint type="continuous" name="right_wheel_hinge">
    <origin xyz="0 -0.185 0.02" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="base_chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="100" velocity="100"/>
    <dynamics damping="0.01" friction="0.1"/>
  </joint>

  <!-- ### CAMERA ### -->

  <link name="camera_link">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
    <collision name='camera_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>

    <visual name='camera_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </visual>
  </link>

  <joint type="fixed" name="camera_joint">
    <origin xyz="0.125 0 0.15" rpy="0 0 0"/>
    <child link="camera_link"/>
    <parent link="base_chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0.02"/>
  </joint>

  <joint name="camera_optical_joint" type="fixed">
    <origin xyz="0 0 0" rpy="-1.5707 0 -1.5707"/>
    <parent link="camera_link"/>
    <child link="camera_link_optical"/>
  </joint>

  <link name="camera_link_optical">
  </link>

  <!-- ### LIDAR ### -->

  <link name="hokuyo">
    <inertial>
      <mass value="1e-5"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>

    <collision name='hokuyo_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual name='hokuyo_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <mesh filename="package://delivery_robot_simulation/models/meshes/hokuyo.dae"/>
      </geometry>
    </visual>

  </link>

  <joint type="fixed" name="hokuyo_joint">
    <origin xyz="0 0 0.075" rpy="0 0 0"/>
    <child link="hokuyo"/>
    <parent link="base_hokuyo"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
  </joint>

</robot>
